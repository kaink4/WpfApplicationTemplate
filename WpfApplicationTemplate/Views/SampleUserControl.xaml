<UserControl x:Class="WpfApplicationTemplate.Views.SampleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplicationTemplate.Views"
             mc:Ignorable="d" Height="34" Width="104">
    <Grid Background="Blue" x:Name="LayoutRoot" >
        <TextBlock Foreground="Yellow" HorizontalAlignment="Left" Margin="10,10,0,0" Text="{Binding Path=Text}" TextWrapping="Wrap" VerticalAlignment="Top" Width="77"/>

    </Grid>
</UserControl>
